<Consultar>
    BoxLayout:
        orientation:'vertical'
        padding: '20dp'
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint_y: None
            height: dp(48)

            MDTextField:
                id: idpes
                hint_text: "Pesquisar"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                size_hint_x: 0.75
                max_text_length: 25

            MDFillRoundFlatButton:
                id: btnbuscar
                text: "Buscar"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                on_release: root.pesquisar(idpes.text)

            MDFillRoundFlatButton:
                text: "Cancelar"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                on_release: root.cancelar()

            MDFillRoundFlatButton:
                id: btnnovo
                text: "Novo"
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                on_release: root.novo()

        BoxLayout:
            ScrollView:
                MDList:
                    id: consulta_list



<ListaItem>:
    id: id_item
    text: root.info1
    secondary_text: root.info2
    IconLeftWidget:
        icon: 'account-circle'

    MDIconButton:
        icon: "images/edit.png"
        pos_hint: {"center_x": .85, "center_y": .5}
        on_release: app.navigation.tela_editar(root)

    MDIconButton:
        icon: "images/delete.png"
        pos_hint: {"center_x": .90, "center_y": .5}
        on_release: root.deletar()

