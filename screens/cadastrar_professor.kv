<CadastrarProfessor>
    BoxLayout:
        orientation:'horizontal'

        BoxLayout:
            size_hint_x: 0.2

        CustomBoxLayout:
            orientation: 'vertical'
            padding: '40dp'
            spacing: 2

            MDLabel:
                text: "CADASTRO DE PROFESSOR"
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size:  35

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5

                MDLabel:
                    id: id
                    hint_text:"ID"
                    text: '-'

                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.07


                MDTextField:
                    id: idnome
                    hint_text:"Nome"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.7
                    write_tab: False
                    multiline: False
                    max_text_length: 100
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]

                MDTextField:
                    id: idcpf
                    hint_text:"CPF"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.23
                    max_text_length: 11
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                MDTextField:
                    id: ae
                    hint_text:"Área de Ensino"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.8
                    max_text_length: 120
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                MDTextField:
                    id: idend
                    hint_text:"Endereço"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.8
                    max_text_length: 120
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                MDTextField:
                    id: idemail
                    hint_text:"Email"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.75
                    max_text_length: 50
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

                MDTextField:
                    id: idtel
                    hint_text:"Tel."
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.75
                    max_text_length: 50
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                BoxLayout:
                    spacing: 15
                    MDFillRoundFlatButton:
                        id:btnsalvar
                        text: "SALVAR"
                        md_bg_color: 0.18,0.53,1,1
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.salvar_dados()

                    MDFillRoundFlatButton:
                        id: btncancelar
                        text: 'CANCELAR'
                        md_bg_color: 'red'
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: app.navigation.return_to_principal()

        BoxLayout:
            size_hint_x: 0.2



