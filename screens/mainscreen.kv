<MainScreen>
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            md_bg_color: 0.19, 0.21, 0.22, 1
            size_hint_y: 0.05
            MDLabel:
                text: "MAIN"
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size:  15
                color: 'white'

        MDBoxLayout:
            md_bg_color: 'white'
            size_hint_y: 0.06

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 0.5
                #pos_hint: {"center_x": 0.46, "center_y": 0.52}

                HoverButton:
                    id: funcbtn
                    text: "Funcionário"
                    md_bg_color: "gray"
                    font_size: 15
                    elevation: 0
                    on_release: root.crud('funcionario')
                HoverButton:
                    id: pagbtn
                    text: "Pagamento"
                    font_size: 20
                    elevation: 0
                    on_release: root.crud('pagamento')
                HoverButton:
                    id: profbtn
                    text: "Professor"
                    font_size: 20
                    elevation: 0
                    on_release: root.crud('professor')
                HoverButton:
                    id: salabtn
                    text: "Sala"
                    font_size: 15
                    elevation: 0
                    on_release: root.crud('sala')
                HoverButton:
                    id: atbtn
                    text: "aluno turma"
                    font_size: 15
                    elevation: 0
                    on_release: root.crud('aluno_turma')

        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: 'white'

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 60, 40, 60, 40
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    #pos_hint: {"center_x": 0.46, "center_y": 0.52}
                    HoverButton:
                        id: alunobtn
                        text: "ALUNOS"
                        md_bg_color: "red"
                        font_size: 40
                        elevation: 0
                        on_release: root.crud('aluno')

                    HoverButton:
                        id:turmabtn
                        text: "TURMAS"
                        md_bg_color: "blue"
                        elevation: 0
                        font_size: 39
                        on_release: root.crud('turma')

                    HoverButton:
                        id: cursobtn
                        text: "CURSOS"
                        md_bg_color: "green"
                        elevation: 0
                        font_size: 40
                        on_release: root.crud('curso')

                MDBoxLayout:
                    orientation: 'vertical'
                    MDRectangleFlatIconButton:
                        icon: "android"
                        text: "GRADE DE HORÁRIOS"
                        md_bg_color: "green"
                        theme_text_color: "Custom"
                        text_color: "black"
                        #line_color: "black"
                        theme_icon_color: "Custom"
                        icon_color: "black"


        MDBoxLayout:
            md_bg_color: 0.19, 0.21, 0.22, 1
            size_hint_y: 0.05
            MDLabel:
                text: root.logado
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size:  15
                color: 'white'







