<CustomBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Cor das bordas (preto neste exemplo)
        Line:
            width: 0.5  # Largura das bordas
            rectangle: self.x, self.y, self.width, self.height + 1


<SpinnerOption>:
    background_normal: ''
    background_color: 0.18,0.53,1,1 # Define a cor de fundo
    color: 'black'  # Define a cor do texto das opções
    size_hint: 0.1, None
    height: dp(30)
    size_hint_x: None
    width: dp(500)
    font_size: '15sp'