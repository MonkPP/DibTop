<LoginScreen>:
    FloatLayout:
        MDTextField:
            id: idlogin
            hint_text: "Login"
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            size_hint_x: 0.75
            max_text_length: 25
            keyboard_mode: 'auto'

        MDTextField:
            id: idsenha
            hint_text: "Senha"
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint_x: 0.75
            password: True
            keyboard_mode: 'auto'

        MDTextButton:
            id: btn_esqueci
            text: "Esqueci minha senha"
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            font_size: 15
            keyboard_mode: 'auto'

        MDFillRoundFlatButton:
            id: btn_entrar
            text: "Entrar"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint_x: 0.75
            text_color: 1, 1, 1, 1
            md_bg_color: 0.18, 0.53, 1, 1
            font_size: 20
            on_release: root.get_data()
            keyboard_mode: 'auto'