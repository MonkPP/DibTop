<CadastrarAlunoTurma>
    BoxLayout:
        orientation:'horizontal'

        BoxLayout:
            size_hint_x: 0.2

        CustomBoxLayout:

            orientation: 'vertical'
            padding: '40dp'
            spacing: 2

            MDLabel:
                text: "CADASTRO ALUNO EM UMA TURMA"
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size:  35

            BoxLayout:
                id: caixa
                orientation: 'horizontal'
                spacing: 5

                MDLabel:
                    id: idalunoturma
                    text: '-'
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.07

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 1

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 1

                        MDLabel:
                            text: 'Aluno: '
                            pos_hint: {'center_x':0.5,'center_y':0.8}
                            size_hint_x: 0.15

                        MDLabel:
                            id: aluno
                            text:"Pesquise o Aluno"
                            pos_hint: {'center_x':0.5,'center_y':0.8}
                            size_hint_x: 0.75
                            max_text_length: 11

                        MDFloatingActionButton:
                            icon: "images/lupa.png"
                            id: btnaluno
                            md_bg_color: 'white'
                            theme_text_color: "Custom"
                            text_color: "black"
                            elevation: 0
                            on_release: root.abrir_popup('aluno')
                            pos_hint: {'center_x':0.5,'center_y':0.8}

                    ScrollView:
                        MDList:
                            id: chaves_list

            BoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: 'Turma: '
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.2

                MDLabel:
                    id: turma
                    text:"Pesquise a turma"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.8
                    max_text_length: 50

                MDFloatingActionButton:
                    icon: "images/lupa.png"
                    id: btnturma
                    md_bg_color: 'white'
                    theme_text_color: "Custom"
                    text_color: "black"
                    elevation: 0
                    on_release: root.abrir_popup('turma')
                    pos_hint: {'center_x':0.5,'center_y':0.8}

            ScrollView:
                MDList:
                    id: chaves_list


            BoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: 'Matricula: '
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.4

                MDLabel:
                    id: matricula
                    text:" - "
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.6
                    max_text_length: 50

                MDFillRoundFlatButton:
                    id: btngerar
                    text: "Gerar"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    md_bg_color: app.theme_cls.primary_color
                    text_color: [1, 1, 1, 1]  # Define a cor do texto como branco
                    on_release: root.gerar_matricula()

            BoxLayout:
                orientation: 'horizontal'
                MDLabel:
                    text: 'Ativo:'

                MDLabel:
                    text: 'Certificado Entregue:'

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5

                CustomSpinner:
                    id: ativo
                    text: 'Ativo'
                    size_hint: 0.1, None
                    height: dp(30)
                    size_hint_x: None
                    width: dp(250)
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    values: 'S', 'N'
                    font_size: '17sp'
                    color: 'black' # Define a cor do texto
                    background_normal: ''
                    background_color: 0.18,0.53,1,1  # Define a cor de fundo do Spinner
                    option_cls: Factory.get('SpinnerOption')  # Define a classe das opções do spinner


                CustomSpinner:
                    id: certificado
                    text: 'Certificado Entregue'
                    size_hint: 0.1, None
                    height: dp(30)
                    size_hint_x: None
                    width: dp(250)
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    values: 'S', 'N'
                    font_size: '17sp'
                    color: 'black' # Define a cor do texto
                    background_normal: ''
                    background_color: 0.18,0.53,1,1  # Define a cor de fundo do Spinner
                    option_cls: Factory.get('SpinnerOption')  # Define a classe das opções do spinner


            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                BoxLayout:
                    spacing: 15
                    MDFillRoundFlatButton:
                        id:btnsalvar
                        text: "SALVAR"
                        md_bg_color: 0.18,0.53,1,1
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.salvar_dados()

                    MDFillRoundFlatButton:
                        id: btncancelar
                        text: 'CANCELAR'
                        md_bg_color: 'red'
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.principal()

        BoxLayout:
            size_hint_x: 0.2


