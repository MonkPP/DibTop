<CadastrarTurma>
    BoxLayout:
        orientation:'horizontal'

        BoxLayout:
            size_hint_x: 0.2

        CustomBoxLayout:

            orientation: 'vertical'
            padding: '40dp'
            spacing: 2

            MDLabel:
                text: "CADASTRO DE TURMA"
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size:  35

            BoxLayout:
                id: caixa
                orientation: 'horizontal'
                spacing: 5

                MDLabel:
                    id: idturma
                    hint_text:"ID"
                    text: '-'
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.07

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 1

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 1
                        MDTextField:
                            id: curso
                            hint_text:"Curso"
                            pos_hint: {'center_x':0.5,'center_y':0.8}
                            size_hint_x: 0.8
                            max_text_length: 11
                            #line_color_normal: [0,1,1,1]
                            #line_color_focus: [0,1,0,1]
                            write_tab: False
                            on_release:

                        MDFloatingActionButton:
                            icon: "images/lupa.png"
                            id: btncurso
                            md_bg_color: 0.18,0.53,1,1
                            theme_text_color: "Custom"
                            text_color: "black"
                            elevation: 0
                            #line_color: "black"
                            on_release: root.pesquisar(curso.text)
                            pos_hint: {'center_x':0.5,'center_y':0.8}

                    ScrollView:
                        MDList:
                            id: curso_list

            BoxLayout:
                orientation: 'horizontal'
                MDTextField:
                    id: prof
                    hint_text:"Professor"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.7
                    write_tab: False
                    multiline: False
                    max_text_length: 100

                MDFloatingActionButton:
                    icon: "images/lupa.png"
                    id: btnprof
                    md_bg_color: 0.18,0.53,1,1
                    theme_text_color: "Custom"
                    text_color: "black"
                    elevation: 0
                    #line_color: "black"
                    on_release: root.pesquisar(prof.text)
                    pos_hint: {'center_x':0.5,'center_y':0.8}


            BoxLayout:
                orientation: 'horizontal'
                spacing: 5

                CustomSpinner:
                    id: turno
                    text: 'Turno'
                    size_hint: 0.1, None
                    height: dp(30)
                    size_hint_x: None
                    width: dp(250)
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    values: 'M', 'V', 'N'
                    font_size: '17sp'
                    color: 'black' # Define a cor do texto
                    background_normal: ''
                    background_color: 0.18,0.53,1,1  # Define a cor de fundo do Spinner
                    option_cls: Factory.get('SpinnerOption')  # Define a classe das opções do spinner


                CustomSpinner:
                    id: dias
                    text: 'Dias da Semana'
                    size_hint: 0.1, None
                    height: dp(30)
                    size_hint_x: None
                    width: dp(250)
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    values: 'Segunda-Feira e Terça-Feira', 'Quarta-Feira e Quinta-Feira', 'Sexta-Feira e Sábado'
                    font_size: '17sp'
                    color: 'black' # Define a cor do texto
                    background_normal: ''
                    background_color: 0.18,0.53,1,1  # Define a cor de fundo do Spinner
                    option_cls: Factory.get('SpinnerOption')  # Define a classe das opções do spinner



            BoxLayout:
                orientation: 'horizontal'
                spacing: 5

                MDTextField:
                    id: inicio
                    hint_text:"Inicio"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.2
                    max_text_length: 120
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False



                MDTextField:
                    id: termino
                    hint_text:"Termino"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.2
                    max_text_length: 50
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False


            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                BoxLayout:
                    spacing: 15
                    MDFillRoundFlatButton:
                        id:btnsalvar
                        text: "SALVAR"
                        md_bg_color: 0.18,0.53,1,1
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.salvar_dados()

                    MDFillRoundFlatButton:
                        id: btncancelar
                        text: 'CANCELAR'
                        md_bg_color: 'red'
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.principal()

        BoxLayout:
            size_hint_x: 0.2



<CursoListaItem>:
    id: id_citem
    text: root.info
