<CadastrarPagamento>
    BoxLayout:
        orientation:'horizontal'

        BoxLayout:
            size_hint_x: 0.2

        CustomBoxLayout:

            orientation: 'vertical'
            padding: '40dp'
            spacing: 2

            MDLabel:
                text: "CADASTRO DE PAGAMENTO"
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                font_size:  35

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5

                MDLabel:
                    id: idpag
                    text: '-'
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.07

                MDLabel:
                    text: 'Matricula: '
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.25

                MDLabel:
                    id: alunoturma
                    text:"Pesquise o aluno"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.75
                    max_text_length: 11

                MDFloatingActionButton:
                    icon: "images/lupa.png"
                    id: btnaluno
                    md_bg_color: 'white'
                    theme_text_color: "Custom"
                    text_color: "black"
                    elevation: 0
                    on_release: root.abrir_popup('aluno_turma')
                    pos_hint: {'center_x':0.5,'center_y':0.8}

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                MDTextField:
                    id: valor
                    hint_text:"valor"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    max_text_length: 7
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

                MDTextField:
                    id: data
                    hint_text:"data"
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    #line_color_normal: [0,1,1,1]
                    #line_color_focus: [0,1,0,1]
                    write_tab: False

            BoxLayout:
                MDLabel:
                    text: 'Funcionario: '
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.15
                MDLabel:
                    id: func
                    text: root.logado
                    pos_hint: {'center_x':0.5,'center_y':0.8}
                    size_hint_x: 0.75
                    max_text_length: 11


            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                BoxLayout:
                    spacing: 15
                    MDFillRoundFlatButton:
                        id:btnsalvar
                        text: "SALVAR"
                        md_bg_color: 0.18,0.53,1,1
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.salvar_dados()

                    MDFillRoundFlatButton:
                        id: btncancelar
                        text: 'CANCELAR'
                        md_bg_color: 'red'
                        pos_hint: {'center_x':0.5}
                        size_hint_x: 0.75
                        font_size: 20
                        on_release: root.principal()

        BoxLayout:
            size_hint_x: 0.2


